{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2017", "ES2021"],
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "types": ["node", "jest"],
    "esModuleInterop": true
  },
  "include": ["src", "bin"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
